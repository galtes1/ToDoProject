<Window x:Class="ToDoProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="To Do List" Margin="10,10, 10,60" HorizontalAlignment="Center" FontSize="30"/>
        <ListBox x:Name="listTasks" Margin="10,60,10,50"></ListBox>
        <TextBox x:Name="txtNewTask" Margin="10,0,50,10" Height="30" VerticalAlignment="Bottom"/>
        <Button  Content="+" Margin="350,0,10,10" Height="30" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
